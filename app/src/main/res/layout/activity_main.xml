<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_weight="0.35">


    <Button
        android:id="@+id/btn_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_weatherText"
        android:onClick="goWeatherActivity">

    </Button>


    <Button
        android:id="@+id/btn_astroPictureOfTheDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_pictureOfTheDay"
        android:onClick="PictureOfTheDay">

    </Button>

    <Button
        android:id="@+id/btn_NEO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_NEO">

    </Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="410dp"
        android:layout_height="0dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic"
        android:layout_weight="0.65" />
</LinearLayout>