<?xml version="1.0" encoding="utf-8"?>
<LinearLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_weight="0.35"
    android:theme="@style/Theme.MaterialComponents"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="@string/textview"
            android:textAllCaps="false"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_primary"/>
    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_astroPictureOfTheDay"
        android:layout_width="300dp"
        android:textSize="12dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_pictureOfTheDay"
        android:onClick="PictureOfTheDay"
        android:bottomRightRadius="10dp"
        android:bottomLeftRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        app:icon="@drawable/ic_image_black_24dp"
        app:iconGravity="textStart"
        app:iconPadding="10dp"
        app:iconTint="@color/design_default_color_surface"
        android:textColor="@color/design_default_color_on_primary">

    </com.google.android.material.button.MaterialButton>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_NEO"
        android:layout_width="300dp"
        android:onClick="NasaPictures"
        android:layout_height="wrap_content"
        android:text="@string/btn_NEO"
        android:bottomRightRadius="10dp"
        android:bottomLeftRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/design_default_color_on_primary"
        app:icon="@drawable/ic_image_black_24dp"
        app:iconGravity="textStart"
        app:iconPadding="10dp"
        app:iconTint="@color/design_default_color_surface"
        android:textSize="12dp">

    </com.google.android.material.button.MaterialButton>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/nasaLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:padding="25dp"
            >

        </ImageView>

    </LinearLayout>

</LinearLayout>
